<p id="notice"><%= notice %></p>

<h1>Enrollments</h1>

<%= form_tag(enrollments_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Enrollment #" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<% if @students.blank? %>
<h4>There are no sections containing the number <%= params[:search] %>.</h4>
<% end %>
<br>

<table>
  <thead>
    <tr>
      <th>Enrollment Number:</th>
      <th>Section:</th>
      <th>Student:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.number %></td>
        <td><%= enrollment.section.number %></td>
        <td><%= enrollment.student.name %></td>
        <td><%= link_to 'Show', enrollment %></td>
        <td><%= link_to 'Edit', edit_enrollment_path(enrollment) %></td>
        <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Enrollment', new_enrollment_path %>
<br>
<%= link_to 'Welcome Page', welcome_index_path %>
<br><br>
<%= link_to 'Log out', destroy_user_session_path, method: :delete %>
